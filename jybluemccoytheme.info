name = JY Blue Mccoy Theme
description = Drupal 7 Custom Theme JY Blue Mccoy
core = 7.x
engine = phptemplate

screenshot = screenshot.png

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[preface_first]  = 'Preface First'
regions[preface_middle] = 'Preface Middle'
regions[preface_last]   = 'Preface Last'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[footer_first]   = 'First Bottom'
regions[footer_second]  = 'Second Bottom'
regions[footer_third]   = 'Third Bottom'
regions[footer_fourth]  = 'Fourth Bottom'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu
 
settings[toggle_logo] = 1 
settings[toggle_name] = 1 
settings[toggle_slogan] = 1 
settings[toggle_node_user_picture] = 1 
settings[toggle_comment_user_picture] = 1 
settings[toggle_comment_user_verification] = 1 
settings[toggle_favicon] = 1 
settings[toggle_main_menu] = 1 
settings[toggle_secondary_menu] = 1

; Social links

settings[social_logo1] = "sites/all/themes/jybluemccoytheme/images/facebooklogo.png"
settings[social_logo2] = "sites/all/themes/jybluemccoytheme/images/linkedinlogo.png"

settings[social_media1] = "https://www.facebook.com"
settings[social_media2] = "https://www.linkedin.com"

; Slideshow Settings

settings[slideshow_slide1] = "sites/all/themes/jybluemccoytheme/images/slide1.jpg"
settings[slideshow_slide2] = "sites/all/themes/jybluemccoytheme/images/slide2.jpg"
settings[slideshow_slide3] = "sites/all/themes/jybluemccoytheme/images/slide3.jpg"

settings[slideshow_title1] = "About"
settings[slideshow_title2] = "Service"
settings[slideshow_title3] = "News"

settings[slideshow_link1] = "content/about"
settings[slideshow_link2] = "content/service"
settings[slideshow_link3] = "news"

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/bootstrap.min.css
stylesheets[all][] = css/flexnav.css
stylesheets[all][] = css/flexslider.css
stylesheets[all][] = css/jybluemccoytheme_style.css

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = js/bootstrap.min.js
scripts[] = js/jquery.min.js
scripts[] = js/jquery.flexnav.min.js
scripts[] = js/jquery.flexslider.js
scripts[] = js/jyblue.js

; Information about the theme
version = "7.x-1.0"
core = "7.x"
project = "jybluemccoytheme"
